<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bhg.sucks.MainActivity">

    <Button
        android:id="@+id/btn_addDummyArtifact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="addDummyArtifact"
        android:text="@string/button_add_dummy_artifact"
        app:layout_constraintStart_toStartOf="@+id/btn_start_overlay"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_overlay" />

    <Button
        android:id="@+id/btn_start_overlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="startOverlay"
        android:text="@string/button_start_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_clear_artifacts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="clearArtifacts"
        android:text="@string/button_clear_artifacts"
        app:layout_constraintEnd_toEndOf="@+id/btn_start_overlay"
        app:layout_constraintStart_toEndOf="@+id/btn_addDummyArtifact"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_overlay" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_artifacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_clear_artifacts"
        app:layout_constraintStart_toStartOf="@+id/btn_addDummyArtifact"
        app:layout_constraintTop_toBottomOf="@+id/button_clear_artifacts" />

</androidx.constraintlayout.widget.ConstraintLayout>